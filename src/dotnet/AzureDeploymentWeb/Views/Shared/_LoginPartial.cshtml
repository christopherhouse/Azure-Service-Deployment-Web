@using System.Security.Principal
@inject IConfiguration Configuration

<ul class="navbar-nav">
@{
    var clientId = Configuration["AzureAd:ClientId"];
    var isAuthConfigured = !string.IsNullOrEmpty(clientId);
}

@if (isAuthConfigured)
{
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <span class="navbar-text">
                Hello @User.Identity.Name!
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in with Microsoft</a>
        </li>
    }
}
else
{
    <li class="nav-item">
        <span class="navbar-text text-muted">
            <i class="fas fa-info-circle"></i> Authentication not configured
        </span>
    </li>
}
</ul>